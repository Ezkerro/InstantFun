<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.instantfun.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="BADUM-TS"
            android:id="@+id/button"
            android:textSize="25dp"
            android:background="#696969"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:onClick="sound"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="NYAN CAT"
            android:id="@+id/button2"
            android:textSize="25dp"
            android:background="#696969"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:onClick="sound1"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="DRAMATIC CHIPMUNK"
            android:id="@+id/button3"
            android:textSize="25dp"
            android:background="#696969"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:onClick="sound2"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="NOOOOO"
            android:id="@+id/button4"
            android:textSize="25dp"
            android:background="#696969"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:onClick="sound3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ITS OVER 9000!!"
            android:id="@+id/button5"
            android:textSize="25dp"
            android:background="#696969"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:onClick="sound4"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="HOMER"
            android:id="@+id/button6"
            android:textSize="25dp"
            android:background="#696969"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:onClick="sound5"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</RelativeLayout>
